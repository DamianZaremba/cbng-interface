#!/bin/bash
set -e
BASE_DIR=$( cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd )
TOOLS_WEB_PORT=$1

# Manual run - submit to grid
if [ "$TOOLS_WEB_PORT" == "" ];
then
    jstart -q webgrid-generic $BASE_DIR/bin/tools_run
    exit
fi

# Grid gave us a port... start
cd $BASE_DIR
. ve/bin/activate

gunicorn -w 5 cbng_interface:wsgi --reload -b 0.0.0.0:$TOOLS_WEB_PORT